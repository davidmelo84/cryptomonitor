<?xml version="1.0" encoding="UTF-8"?>
<!-- back/src/main/resources/logback-spring.xml -->
<configuration>

    <!-- ================================================ -->
    <!-- ✅ SPRINT 1 - LOGS ESTRUTURADOS                 -->
    <!-- ================================================ -->

    <!-- Propriedades -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}" />
    <property name="APP_NAME" value="crypto-monitor" />

    <!-- ================================================ -->
    <!-- CONSOLE APPENDER (Desenvolvimento)              -->
    <!-- ================================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ================================================ -->
    <!-- JSON APPENDER (Produção)                        -->
    <!-- Logs estruturados para análise                  -->
    <!-- ================================================ -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.json</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Campos customizados -->
            <customFields>{"app":"crypto-monitor","version":"2.0.1"}</customFields>

            <!-- Incluir MDC (Mapped Diagnostic Context) -->
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>requestId</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>

            <!-- Incluir contexto de erro -->
            <includeContext>true</includeContext>
            <includeCallerData>false</includeCallerData>

            <!-- Stack trace apenas para erros -->
            <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                <maxDepthPerThrowable>30</maxDepthPerThrowable>
                <maxLength>2048</maxLength>
                <shortenedClassNameLength>20</shortenedClassNameLength>
                <exclude>^sun\.reflect\..*</exclude>
                <exclude>^net\.sf\.cglib\..*</exclude>
                <exclude>^org\.springframework\..*</exclude>
            </throwableConverter>
        </encoder>
    </appender>

    <!-- ================================================ -->
    <!-- ✅ AUDIT LOG (Segurança)                        -->
    <!-- Logs de autenticação, autorizaçã e ações críticas -->
    <!-- ================================================ -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-audit.json</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-audit.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>90</maxHistory> <!-- Manter 90 dias de audit logs -->
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"type":"audit","app":"crypto-monitor"}</customFields>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <includeMdcKeyName>action</includeMdcKeyName>
            <includeMdcKeyName>resource</includeMdcKeyName>
            <includeMdcKeyName>clientIp</includeMdcKeyName>
            <includeContext>true</includeContext>
        </encoder>
    </appender>

    <!-- ================================================ -->
    <!-- ✅ ERROR LOG (Apenas erros)                     -->
    <!-- ================================================ -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-error.log</file>

        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-error.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- ================================================ -->
    <!-- LOGGERS POR PACOTE                              -->
    <!-- ================================================ -->

    <!-- ✅ Aplicação -->
    <logger name="com.crypto" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="JSON_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <!-- ✅ Audit Logger (usado para ações de segurança) -->
    <logger name="com.crypto.security.audit" level="INFO" additivity="false">
        <appender-ref ref="AUDIT_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </logger>

    <!-- Spring Framework -->
    <logger name="org.springframework" level="WARN" />
    <logger name="org.springframework.security" level="INFO" />
    <logger name="org.springframework.web" level="WARN" />

    <!-- Hibernate -->
    <logger name="org.hibernate" level="WARN" />
    <logger name="org.hibernate.SQL" level="DEBUG" /> <!-- SQL queries -->
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" /> <!-- Parameters -->

    <!-- Flyway -->
    <logger name="org.flywaydb" level="INFO" />

    <!-- ✅ Rate Limiting (DEBUG em dev) -->
    <logger name="com.crypto.security.RateLimitFilter" level="INFO" />

    <!-- ================================================ -->
    <!-- ROOT LOGGER                                     -->
    <!-- ================================================ -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="JSON_FILE" />
        <appender-ref ref="ERROR_FILE" />
    </root>

    <!-- ================================================ -->
    <!-- PROFILES (dev vs prod)                          -->
    <!-- ================================================ -->

    <!-- Desenvolvimento: Logs detalhados no console -->
    <springProfile name="dev">
        <logger name="com.crypto" level="DEBUG" />
        <logger name="org.springframework.security" level="DEBUG" />
    </springProfile>

    <!-- Produção: Logs estruturados em JSON -->
    <springProfile name="prod">
        <logger name="com.crypto" level="INFO" />
        <logger name="org.springframework" level="WARN" />

        <!-- Desabilitar console em produção (usa apenas arquivos) -->
        <root level="INFO">
            <appender-ref ref="JSON_FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

</configuration>