# STAGE 1: BUILD
# â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
FROM maven:3.9.9-eclipse-temurin-17-alpine AS build

WORKDIR /app

# âœ… Cache de dependÃªncias (acelera rebuilds)
COPY pom.xml .
RUN mvn dependency:go-offline -B

# âœ… Copiar cÃ³digo e compilar
COPY src ./src
RUN mvn clean package -DskipTests -B && \
    echo "âœ… Build concluÃ­do: $(ls -lh target/*.jar)"

# â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
# STAGE 2: RUNTIME
# â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”
FROM eclipse-temurin:17-jre-alpine

# âœ… Metadados
LABEL maintainer="ddevnordeste@gmail.com"
LABEL app="crypto-monitor"
LABEL version="2.0.1"

WORKDIR /app

# ğŸ”’ Criar usuÃ¡rio nÃ£o-root (seguranÃ§a)
RUN addgroup -S spring && \
    adduser -S spring -G spring && \
    chown -R spring:spring /app

# âœ… Copiar JAR do stage anterior
COPY --from=build --chown=spring:spring /app/target/crypto-monitor.jar app.jar

# ğŸ”’ Trocar para usuÃ¡rio nÃ£o-root
USER spring:spring

# âœ… Porta
EXPOSE 8080

# âœ… Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/crypto-monitor/actuator/health || exit 1

# âœ… Comando otimizado
ENTRYPOINT ["java", \
    "-Xmx512m", \
    "-Xms256m", \
    "-XX:+UseContainerSupport", \
    "-XX:MaxRAMPercentage=75.0", \
    "-Djava.security.egd=file:/dev/./urandom", \
    "-Dserver.port=${PORT:-8080}", \
    "-Dspring.profiles.active=${SPRING_PROFILES_ACTIVE:-prod}", \
    "-jar", "app.jar"]